# Environment Variables Template
# Copy this file to .env and fill in your actual values

# ================================================================
# APPLICATION SETTINGS
# ================================================================
NODE_ENV=development
NEXT_PUBLIC_WEBAPP_ENV=local
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_MAINTENANCE=false

# ================================================================
# AUTHENTICATION (Better Auth)
# ================================================================
BETTER_AUTH_SECRET=your-secret-key-here-change-in-production
BETTER_AUTH_URL=http://localhost:3000

# Google OAuth (Optional)
AUTH_GOOGLE_ID=your-google-client-id
AUTH_GOOGLE_SECRET=your-google-client-secret

# ================================================================
# EMAIL (AWS SES - Optional)
# ================================================================
AWS_SES_ACCESS_KEY_ID=your-ses-access-key
AWS_SES_SECRET_ACCESS_KEY=your-ses-secret-key
AWS_SES_REGION=us-east-1
FROM_EMAIL=noreply@example.com
SES_REPLY_TO_EMAIL=noreply@example.com
SES_VERIFIED_EMAIL=noreply@example.com

# ================================================================
# ZARINPAL PAYMENT GATEWAY
# ================================================================
# Get credentials from: https://next.zarinpal.com/panel/
ZARINPAL_MERCHANT_ID=00000000-0000-0000-0000-000000000000
ZARINPAL_ACCESS_TOKEN=your-zarinpal-access-token

# ================================================================
# SECURITY
# ================================================================
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your-turnstile-site-key
TURNSTILE_SECRET_KEY=your-turnstile-secret-key
SIGNED_URL_SECRET=your-signed-url-secret

# ================================================================
# R2 STORAGE
# ================================================================
R2_PUBLIC_URL=http://localhost:3000/uploads

# ================================================================
# CLOUDFLARE (For production deployment)
# ================================================================
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
D1_TOKEN=your-d1-token
PREVIEW_DATABASE_ID=your-preview-database-id
PROD_DATABASE_ID=your-prod-database-id

# ================================================================
# WEBHOOKS (Optional)
# ================================================================
EXTERNAL_WEBHOOK_URL=https://your-api.com/webhooks

# ================================================================
# LOCAL DEVELOPMENT
# ================================================================
DATABASE_URL=file:./local.db